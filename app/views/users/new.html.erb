<div style="margin-top: 100px; display: flex; justify-content: center; align-items: center;">
    <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
            <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <h1>Open a Catbank Account Now!</h1>

        <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, style: 'width: 500px;' %>
        </div>
        <br />
        <div class="field" >
            <%= f.label :lastname %><br />
            <%= f.text_field :lastname, style: 'width: 500px;' %>
        </div>
        <br />
        <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email, style: 'width: 500px;' %>
        </div>
        <br />
        <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, style: 'width: 500px;' %>
        </div>
        <br />
        <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, style: 'width: 500px;' %>
        </div>
        <br />
        <div class="actions"><%= f.submit "Sign Up" %></div>
        <br />
    <% end %>
</div>