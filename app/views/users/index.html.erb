<div style="margin-top: 100px; margin-left: 100px; display: flex; justify-content: left; align-items: left;">
    <div>
        <div style="margin-bottom: 20px;"><h2>Account Summary</h2></div>
        <div><h4>Id: <%= @user.id %></h4></div>
        <div><h4>Holder: <%= @user.name + ' ' +  @user.lastname %></h4></div>
        <div><h4>Email: <%= @user.email %></h4></div>
        <div><h4>Available Cash: <%= number_to_currency(@user.available_cash) %></h4></div>
    </div>
    <div style="margin-left: 200px;">
        <%= form_tag(transfer_path, method: :post) do %>
            <h2>Transfer Cash to another User</h2>
            <br />
            <div class="field">
                <%= label_tag "Recipient ID" %><br />
                <%= text_field_tag :recipient_id, params[:recipient_id] %>
            </div>
            <br />
            <div class="field">
                <%= label_tag :amount %><br />
                <%= text_field_tag :amount %>
            </div>
            <br />
            <div class="actions"><%= submit_tag "Transfer" %></div>
            <br />
        <% end %>
    </div>
</div>

<div style="margin-top: 100px; margin-left: 100px;">
    <div><h2>Transactions</h2></div>

    <table style="width: 100%; border-collapse: collapse; margin: 25px 0; min-width: 400px;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Type</th>
                <th>Value</th>
                <th>Info</th>
            </tr>
        </thead>
        <tbody>
            <% @user.transactions.each do |transaction| %>
                <tr>
                    <td><%= transaction.id %></td>
                    <td><%= transaction.transaction_type %></td>
                    <td><%= transaction.value %></td>
                    <td><%= transaction.info %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>